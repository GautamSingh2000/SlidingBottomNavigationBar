<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_blue"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragmens.HomeFragment">

    <LinearLayout
        android:id="@+id/topbar"
        android:gravity="center"
        android:layout_marginHorizontal="15.dp"
        android:layout_marginTop="8.dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="20.dp"
            android:src="@drawable/location"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ND 59, India"
            android:textSize="11.sp"
            android:textColor="@color/blue"/>
        <ImageView
            android:layout_gravity="center_horizontal"
            android:foregroundGravity="center_horizontal"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="50.dp"
            android:src="@drawable/ic_logo_color"/>

        <ImageView
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="20.dp"
            android:src="@drawable/vector_smart_object_6"/>

        <ImageView
        android:layout_weight="0.3"
        android:layout_width="0dp"
        android:layout_height="20.dp"
        android:src="@drawable/vector_smart_object_7"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:scrollIndicators="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <com.google.android.material.card.MaterialCardView
                app:cardCornerRadius="15.dp"
                app:cardElevation="0dp"
                android:layout_marginTop="17dp"
                android:layout_marginHorizontal="15.dp"
                android:layout_width="match_parent"
                android:layout_height="200.dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/offer"/>
            </com.google.android.material.card.MaterialCardView>
            <LinearLayout
                android:layout_marginTop="8.dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="10.dp"
                    android:layout_height="10.dp"
                    android:src="@drawable/ellipse_12"/>
                <ImageView
                    android:layout_marginHorizontal="4.dp"
                    android:layout_width="10.dp"
                    android:layout_height="10.dp"
                    android:src="@drawable/ellipse_12_copy"/>
                <ImageView
                    android:layout_width="10.dp"
                    android:layout_height="10.dp"
                    android:src="@drawable/ellipse_12"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="20.dp"
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:listitem="@layout/single_tab"
                android:scrollIndicators="none"
                app:spanCount="3"
                android:layout_marginHorizontal="15.dp"/>


            <androidx.cardview.widget.CardView
                app:cardCornerRadius="20.dp"
                android:elevation="0dp"
                app:cardBackgroundColor="#E6F5FF"
                app:cardElevation="0dp"
                android:clickable="false"
                android:layout_marginTop="17dp"
                android:layout_marginHorizontal="15.dp"
                android:layout_marginBottom="80.dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/text"
                        android:layout_marginTop="15.dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stay Safe"
                        android:textColor="#3399F1"
                        android:textSize="18.sp"
                        android:layout_centerHorizontal="true"/>
                    <androidx.appcompat.widget.AppCompatImageButton
                        android:elevation="5.dp"
                        android:layout_width="17.dp"
                        android:layout_height="20.dp"
                        android:background="#00117EDD"
                        android:clickable="true"
                        android:layout_alignParentRight="true"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/rounded_rectangle_7"/>

                    <LinearLayout
                        android:layout_below="@id/text"
                        android:layout_marginBottom="10.dp"
                        android:paddingHorizontal="10.dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25.dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_gravity="bottom"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60.dp"
                                android:layout_height="60.dp"
                                android:src="@drawable/vector_smart_object_3"/>
                            <TextView
                                android:layout_marginTop="10.dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textSize="15.sp"
                                android:text="Always wear a mark"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:layout_gravity="bottom"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60.dp"
                                android:layout_height="60.dp"
                                android:src="@drawable/vector_smart_object_2"/>
                            <TextView
                                android:layout_marginTop="10.dp"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15.sp"
                                android:text="Waash hand"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_gravity="bottom"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60.dp"
                                android:layout_height="60.dp"
                                android:src="@drawable/vector_smart_object_1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="10.dp"
                                android:textSize="15.sp"
                                android:text="Keep distance with other"/>

                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>