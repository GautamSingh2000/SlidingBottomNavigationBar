<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10.dp"
        android:layout_margin="10.dp"
        android:outlineSpotShadowColor="@color/blue"
        android:outlineAmbientShadowColor="@color/blue"
        android:layout_width="100.dp"
        android:layout_height="100.dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="8.dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/image"
                android:layout_width="50.dp"
                android:layout_height="50.dp"
                android:layout_gravity="center"
                android:src="@drawable/vector_smart_object_1_2"/>

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GYM"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>